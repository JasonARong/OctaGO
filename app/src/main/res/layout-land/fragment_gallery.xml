                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_background"
                    android:padding="@dimen/gap_small"
                    android:text="DRAFT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    app:layout_constraintBottom_toBottomOf="@+id/image01"
                    app:layout_constraintEnd_toEndOf="@+id/image01"
                    app:layout_constraintStart_toStartOf="@+id/image01"
                    app:layout_constraintTop_toTopOf="@+id/image01" />

                <TextView
                    android:id="@+id/materialName01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_small"
                    android:text="Name of the Material"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toStartOf="@+id/image01"
                    app:layout_constraintTop_toBottomOf="@+id/image01" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street 123, Location Name \nApril 16 | Draft"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintStart_toStartOf="@+id/image01"
                    app:layout_constraintTop_toBottomOf="@+id/materialName01" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
